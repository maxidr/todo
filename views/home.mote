<h1>The To do list</h1>

{{ partial "form", task: task }}

<ul>
  % Task.to_complete.each do |t|
    <li>
      {{ t.title }}
      <form action="/tasks/{{ t.id }}" method="post">
        <input type="hidden" name="_method" value="put">
        <button type="submit" name="done">Done!</button>
      </form>
    </li>
  % end 
</ul>
